{
  "name": "translategemma-ui",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "node production-server.mjs",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate": "tsr generate",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run typecheck && npm run lint:check && npm run format:check",
    "prepare": "husky"
  },
  "dependencies": {
    "@tanstack/react-router": "1.157.16",
    "@tanstack/react-start": "1.157.16",
    "@vitejs/plugin-react": "5.1.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "srvx": "^0.10.1",
    "vite": "7.3.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@tailwindcss/vite": "4.1.18",
    "@tanstack/router-cli": "^1.157.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "22.15.3",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "globals": "16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.18",
    "typescript": "5.8.3",
    "typescript-eslint": "8.33.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,mjs,json,css,md}": [
      "prettier --write"
    ]
  }
}
